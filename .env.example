# Environment Variables Template
# Copy file này thành .env và cập nhật các giá trị

# ==============================================
# FLASK CONFIGURATION
# ==============================================

# Secret key để mã hóa session (PHẢI thay đổi trong production!)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Flask environment: development, production, testing
FLASK_ENV=development

# Debug mode (True/False)
FLASK_DEBUG=True

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Database URL
# SQLite (default): sqlite:///roommaster.db
# PostgreSQL: postgresql://username:password@localhost/roommaster
# MySQL: mysql://username:password@localhost/roommaster
DATABASE_URL=sqlite:///roommaster.db

# ==============================================
# APPLICATION SETTINGS
# ==============================================

# Số item mỗi trang (phân trang)
ITEMS_PER_PAGE=10

# Giới hạn kích thước file upload (bytes)
# 16MB = 16777216 bytes
MAX_CONTENT_LENGTH=16777216

# ==============================================
# LOGGING
# ==============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/roommaster.log

# ==============================================
# SECURITY
# ==============================================

# Session lifetime (giây) - 1 ngày = 86400
PERMANENT_SESSION_LIFETIME=86400

# CSRF Protection (True/False)
WTF_CSRF_ENABLED=True

# ==============================================
# EMAIL CONFIGURATION (Tùy chọn - cho tương lai)
# ==============================================

# MAIL_SERVER=smtp.gmail.com
